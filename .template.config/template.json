{
  "$schema": "https://json.schemastore.org/template.json",
  "author": "Lotte Pitcher",
  "classifications": [
    "Web",
    "Umbraco",
    "Package"
  ],
  "name": "Umbraco Package Starter Solution",
  "description": "A solution template for creating an Umbraco package with a test site; plus nuget, Umbraco Marketplace and GitHub configuration",
  "identity": "Umbraco.Community.Templates.PackageStarter",
  "shortName": "umbracopackagestarter",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "PackageStarter",
  "defaultName": "PackageStarter1",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.git/**",
            "**/.vs/**",
            ".github/**"
          ]
        }
      ],
      "rename": {
        ".github_package/": ".github/"
      }
    }
  ],
  "symbols": {
    "currentYear": {
      "type": "generated",
      "generator": "now",
      "replaces": "CurrentYear",
      "parameters": {
        "format": "yyyy"
      }
    }
  },
  "primaryOutputs": [
    {
      "path": "src/PackageStarter/PackageStarter.csproj"
    },   
    {
      "path": "src/PackageStarter/PackageStarter.TestSite.csproj"
    }
  ],
  "postActions": [
    {
      "condition": "(!SkipRestore)",
      "description": "Restore NuGet packages required by this project",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}